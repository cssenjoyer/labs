/*14. В квадратной матрице размером NxN найти минимальный элемент в 2-ой области*/

#include <stdio.h>
#include <locale.h>
#include <limits.h>
#include <time.h>
#include <stdlib.h>


#define MAX_SIZE 100

int main()
{
	setlocale(LC_ALL, "RUS");
	int matrix[MAX_SIZE][MAX_SIZE];
	int size;

	printf("Введите размер матрицы (от 1 до %d): ", MAX_SIZE);
	while (1) {
		if (scanf_s("%d", &size) != 1 || size < 1 || size > MAX_SIZE) {
			printf("Ошибка\nВведите корректное значение: ");
			while (getchar() != '\n');
		}
		else {
			break;
		}
	}
	int choice;
	printf("Выберите способ инициализации матрицы:\n");
	printf("1 - ввод с клавиатуры\n");
	printf("2 - случайные значения\n");
	printf("Ваш выбор: ");
	scanf_s("%d", &choice);

	if (choice == 1) {
		printf("Введите элементы матрицы %dx%d", size, size);
		for (int i = 0; i < size; i++) {
			for (int j = 0; j < size; j++) {
				printf("Матрица[%d][%d]", i, j);
				while (scanf_s("%d", &matrix[i][j]) != 1) {
					printf("Ошибка\nВведите корректное значение: ");
					while (getchar() != '\n');
				}
			}
		}
	}
	else if (choice == 2) {
		srand(time(NULL));
		int upper = 10, lower = -10;
		for (int i = 0; i < size; i++) {
			for (int j = 0; j < size; j++) {
				matrix[i][j] = lower + rand() % (upper - lower + 1);
			}
		}
		printf("Сгенерированная матрица:\n ");
		for (int i = 0; i < size; i++) {
			for (int j = 0; j < size; j++) {
				printf("%4d", matrix[i][j]);
			}
			printf("\n");
		}
	}
	else {
		printf("Некорректный выбор\nЗакрытие программы");
		return 1;
	}



	int min_value = INT_MAX;

	for (int i = 0; i < size / 2; i++) {
		for (int j = size / 2; j < size; j++) {
			if (matrix[i][j] < min_value) {
				min_value = matrix[i][j];
			}
		}
	}
	printf("Минимальный элемент во 2-й области: %d\n", min_value);

	return 0;

}
